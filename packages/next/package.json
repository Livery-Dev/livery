{
  "name": "@livery/next",
  "version": "0.0.0",
  "description": "Next.js integration for @livery/core - multi-tenant theming for B2B SaaS",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./middleware": {
      "import": {
        "types": "./dist/middleware.d.ts",
        "default": "./dist/middleware.js"
      },
      "require": {
        "types": "./dist/middleware.d.cts",
        "default": "./dist/middleware.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "check-types": "tsc --noEmit",
    "lint": "eslint . --max-warnings 0"
  },
  "keywords": [
    "nextjs",
    "next",
    "theming",
    "multi-tenant",
    "b2b",
    "saas",
    "css",
    "design-tokens",
    "typescript",
    "middleware",
    "app-router"
  ],
  "author": "Livery Contributors",
  "license": "MIT",
  "homepage": "https://livery.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Livery-Dev/livery.git",
    "directory": "packages/next"
  },
  "bugs": {
    "url": "https://github.com/Livery-Dev/livery/issues"
  },
  "devDependencies": {
    "@livery/core": "workspace:*",
    "@livery/react": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitest/coverage-v8": "^3.2.2",
    "eslint": "^9.39.1",
    "next": "^15.1.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsdown": "^0.18.0",
    "vitest": "^3.2.2"
  },
  "peerDependencies": {
    "@livery/core": "workspace:*",
    "@livery/react": "workspace:*",
    "next": ">=14.0.0",
    "react": ">=18.0.0",
    "typescript": ">=5.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18"
  }
}
