{
  "name": "@livery/react",
  "version": "0.0.0",
  "description": "React bindings for @livery/core - multi-tenant theming for B2B SaaS",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./server": {
      "import": {
        "types": "./dist/server.d.ts",
        "default": "./dist/server.js"
      },
      "require": {
        "types": "./dist/server.d.cts",
        "default": "./dist/server.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "check-types": "tsc --noEmit",
    "lint": "eslint . --max-warnings 0"
  },
  "keywords": [
    "react",
    "theming",
    "multi-tenant",
    "b2b",
    "saas",
    "css",
    "design-tokens",
    "typescript",
    "hooks",
    "context"
  ],
  "author": "Livery Contributors",
  "license": "MIT",
  "homepage": "https://livery.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Livery-Dev/livery.git",
    "directory": "packages/react"
  },
  "bugs": {
    "url": "https://github.com/Livery-Dev/livery/issues"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@vitest/coverage-v8": "^3.2.2",
    "eslint": "^9.39.1",
    "jsdom": "^26.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsdown": "^0.18.0",
    "vitest": "^3.2.2"
  },
  "peerDependencies": {
    "@livery/core": "workspace:*",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "typescript": ">=5.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18"
  }
}
