{
  "name": "@livery/core",
  "version": "0.0.1",
  "description": "Type-safe, multi-tenant theming library for B2B SaaS applications",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "check-types": "tsc --noEmit",
    "lint": "eslint . --max-warnings 0"
  },
  "keywords": [
    "theming",
    "multi-tenant",
    "b2b",
    "saas",
    "css",
    "design-tokens",
    "typescript"
  ],
  "author": "Livery Contributors",
  "license": "MIT",
  "homepage": "https://livery.dev",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Livery-Dev/livery.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/Livery-Dev/livery/issues"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@vitest/coverage-v8": "^3.2.2",
    "eslint": "^9.39.1",
    "tsdown": "^0.18.0",
    "vitest": "^3.2.2"
  },
  "peerDependencies": {
    "typescript": ">=5.0"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18"
  }
}
